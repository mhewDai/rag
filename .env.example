# API Configuration
API__OPENAI_API_KEY=your_openai_api_key_here
API__ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OCR Configuration
OCR__TESSERACT_CMD=/usr/local/bin/tesseract
OCR__LANGUAGE=eng
OCR__DPI=300
OCR__PREPROCESS=true
OCR__DENOISE=true
OCR__DESKEW=true
OCR__CONTRAST_ENHANCEMENT=true

# Chunking Configuration
CHUNK__CHUNK_SIZE=800
CHUNK__CHUNK_OVERLAP=100
CHUNK__STRATEGY=sentence-aware
CHUNK__MIN_CHUNK_SIZE=50

# RAG Configuration
RAG__EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RAG__LLM_MODEL=gpt-4
RAG__LLM_TEMPERATURE=0.0
RAG__TOP_K_RETRIEVAL=5
RAG__MAX_TOKENS=1000
RAG__CONFIDENCE_THRESHOLD=0.5

# Vector Store Configuration
VECTOR_STORE__PERSIST_DIRECTORY=./data/chroma
VECTOR_STORE__COLLECTION_NAME=property_documents
VECTOR_STORE__DISTANCE_METRIC=cosine

# Pipeline Configuration
PIPELINE__MAX_RETRIES=3
PIPELINE__RETRY_DELAY=1.0
PIPELINE__EXPONENTIAL_BACKOFF=true
PIPELINE__BATCH_CONCURRENCY=5
PIPELINE__RATE_LIMIT_PER_MINUTE=60
PIPELINE__TIMEOUT=300.0

# Logging Configuration
LOGGING__LOG_LEVEL=INFO
LOGGING__LOG_FILE=./logs/extraction.log
LOGGING__LOG_TO_CONSOLE=true
LOGGING__LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
